{
    "name": "controller/controller-php",
    "description": "Error tracking package for PHP applications",
    "version": "1.0.0",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Controller\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Controller\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.0",
        "monolog/monolog": "^2.0|^3.0",
        "symfony/http-foundation": "^6.0|^7.0",
        "ramsey/uuid": "^4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "mockery/mockery": "^1.0",
        "symfony/var-dumper": "^6.0|^7.0",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "test": "vendor/bin/phpunit",
        "format": "vendor/bin/php-cs-fixer fix"
    }
}